<script type="text/javascript">

    $(function () {
        // 获取内容并显示
        var id = '@ViewBag.Id';
        $.ajax({
            url: "/api/CROSS_HEADApi/" + id,
            type: "POST",
            // async: false,
            success: function (res) {
		$("#TYPE").html(res.TYPE);$("#VALUE").html(res.VALUE);$("#VALUE_UNIT").html(res.VALUE_UNIT);$("#GRADE_VALUE").html(res.GRADE_VALUE);$("#PREPARE_SCHEMEID").html(res.PREPARE_SCHEMEID);$("#CREATETIME").html(res.CREATETIME);$("#CREATEPERSON").html(res.CREATEPERSON);$("#UPDATETIME").html(res.UPDATETIME);$("#UPDATEPERSON").html(res.UPDATEPERSON);
            }
        })
    });
</script>

