@model Langben.DAL.APPLIANCECOLLECTION

@{
    Layout = "~/Views/Shared/Edit.cshtml";
}
@using Common
@using Models
 @section CurentPlace {
    修改  
}

@using (Html.BeginForm("", "api/APPLIANCECOLLECTIONApi/Put"))
{
    <fieldset>
        <legend>
            <input class="a2 f2" type="submit" value="修改" />
            <input class="a2 f2" type="button" onclick="BackList('APPLIANCECOLLECTION')" value="返回列表" />
        </legend>
        <div class="bigdiv">
            @Html.HiddenFor(model => model.ID )      
            <div class="editor-label">
                @Html.LabelFor(model => model.GETNUMBER) ：
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.GETNUMBER, new {  onkeyup = "isInt(this)", @class="text-box single-line" })
                @Html.ValidationMessageFor(model => model.GETNUMBER) 
            </div>@Html.HiddenFor(model => model.CREATETIME )      
            <div class="editor-label">
                @Html.LabelFor(model => model.CREATEPERSON)：
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CREATEPERSON)
                @Html.ValidationMessageFor(model => model.CREATEPERSON)
            </div>     
            <div class="editor-label">
                @Html.LabelFor(model => model.UPDATEPERSON)：
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UPDATEPERSON)
                @Html.ValidationMessageFor(model => model.UPDATEPERSON)
            </div>      
            <div class="editor-label">
                <a class="anUnderLine" onclick="showModalOnly('APPLIANCE_DETAIL_INFORMATIONID','../../APPLIANCE_DETAIL_INFORMATION');">
                    @Html.LabelFor(model => model.APPLIANCE_DETAIL_INFORMATIONID) 
                </a>：
            </div>
            <div class="editor-field">
                <div id="checkAPPLIANCE_DETAIL_INFORMATIONID">
                        @if(Model!=null)
                        {
                        if (null != Model.APPLIANCE_DETAIL_INFORMATIONID)                      
                        { 
                    <table id="@Model.APPLIANCE_DETAIL_INFORMATIONID"
                        class="deleteStyle">
                        <tr>
                            <td>
                                <img alt="删除"  title="点击删除" onclick="deleteTable('@Model.APPLIANCE_DETAIL_INFORMATIONID ','APPLIANCE_DETAIL_INFORMATIONID');" src="../../../Images/deleteimge.png" />
                            </td>
                            <td>
                                @Model.APPLIANCE_DETAIL_INFORMATION.BAR_CODE_NUM
                            </td>
                        </tr>
                    </table>
                    }} 
                </div>
                @Html.HiddenFor(model => model.APPLIANCE_DETAIL_INFORMATIONID)
            </div>
        </div>
    </fieldset>
}



    <script type="text/javascript">

        $(function () {
            

            // 获取待编辑内容并显示
            var id = '@ViewBag.Id';
            $.ajax({
                url: "/api/APPLIANCECOLLECTIONApi/" + id,
                type: "POST",
                // async: false,
                success: function (res) {
                    $("#ID").val(res.ID);$("#GETNUMBER").val(res.GETNUMBER);$("#CREATETIME").val(res.CREATETIME);$("#CREATEPERSON").val(res.CREATEPERSON);$("#UPDATEPERSON").val(res.UPDATEPERSON);
                }
            })
        });
        

    </script>



