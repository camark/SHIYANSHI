@model Langben.DAL.TABLE_BODY_XY

@{
    Layout = "~/Views/Shared/Edit.cshtml";
}
@using Common
@using Models
 @section CurentPlace {
    修改  
}

@using (Html.BeginForm("", "api/TABLE_BODY_XYApi/Put"))
{
    <fieldset>
        <legend>
            <input class="a2 f2" type="submit" value="修改" />
            <input class="a2 f2" type="button" onclick="BackList('TABLE_BODY_XY')" value="返回列表" />
        </legend>
        <div class="bigdiv">
            @Html.HiddenFor(model => model.ID )      
            <div class="editor-label">
                @Html.LabelFor(model => model.X) ：
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.X, new {  onkeyup = "isInt(this)", @class="text-box single-line" })
                @Html.ValidationMessageFor(model => model.X) 
            </div>     
            <div class="editor-label">
                @Html.LabelFor(model => model.Y) ：
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Y, new {  onkeyup = "isInt(this)", @class="text-box single-line" })
                @Html.ValidationMessageFor(model => model.Y) 
            </div>     
            <div class="editor-label">
                @Html.LabelFor(model => model.CATEGORY)：
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CATEGORY)
                @Html.ValidationMessageFor(model => model.CATEGORY)
            </div>     
            <div class="editor-label">
                @Html.LabelFor(model => model.DEFAULT_VALUE) ：
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.DEFAULT_VALUE, new {  onkeyup = "isInt(this)", @class="text-box single-line" })
                @Html.ValidationMessageFor(model => model.DEFAULT_VALUE) 
            </div>     
            <div class="editor-label">
                @Html.LabelFor(model => model.MERGE_Y) ：
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.MERGE_Y, new {  onkeyup = "isInt(this)", @class="text-box single-line" })
                @Html.ValidationMessageFor(model => model.MERGE_Y) 
            </div>      
            <div class="editor-label">
                <a class="anUnderLine" onclick="showModalOnly('TEST_ITEM_FORMATID','../../TEST_ITEM_FORMAT');">
                    @Html.LabelFor(model => model.TEST_ITEM_FORMATID) 
                </a>：
            </div>
            <div class="editor-field">
                <div id="checkTEST_ITEM_FORMATID">
                        @if(Model!=null)
                        {
                        if (null != Model.TEST_ITEM_FORMATID)                      
                        { 
                    <table id="@Model.TEST_ITEM_FORMATID"
                        class="deleteStyle">
                        <tr>
                            <td>
                                <img alt="删除"  title="点击删除" onclick="deleteTable('@Model.TEST_ITEM_FORMATID ','TEST_ITEM_FORMATID');" src="../../../Images/deleteimge.png" />
                            </td>
                            <td>
                                @Model.TEST_ITEM_FORMAT.ROW_COUNT
                            </td>
                        </tr>
                    </table>
                    }} 
                </div>
                @Html.HiddenFor(model => model.TEST_ITEM_FORMATID)
            </div>@Html.HiddenFor(model => model.CREATETIME )      
            <div class="editor-label">
                @Html.LabelFor(model => model.CREATEPERSON)：
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CREATEPERSON)
                @Html.ValidationMessageFor(model => model.CREATEPERSON)
            </div>     
            <div class="editor-label">
                @Html.LabelFor(model => model.UPDATEPERSON)：
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UPDATEPERSON)
                @Html.ValidationMessageFor(model => model.UPDATEPERSON)
            </div>
        </div>
    </fieldset>
}



    <script type="text/javascript">

        $(function () {
            

            // 获取待编辑内容并显示
            var id = '@ViewBag.Id';
            $.ajax({
                url: "/api/TABLE_BODY_XYApi/" + id,
                type: "POST",
                // async: false,
                success: function (res) {
                    $("#ID").val(res.ID);$("#X").val(res.X);$("#Y").val(res.Y);$("#CATEGORY").val(res.CATEGORY);$("#DEFAULT_VALUE").val(res.DEFAULT_VALUE);$("#MERGE_Y").val(res.MERGE_Y);$("#CREATETIME").val(res.CREATETIME);$("#CREATEPERSON").val(res.CREATEPERSON);$("#UPDATEPERSON").val(res.UPDATEPERSON);
                }
            })
        });
        

    </script>



