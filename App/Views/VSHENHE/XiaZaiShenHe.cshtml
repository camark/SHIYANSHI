
@{
    Layout = "~/Views/Shared/AppCreate.cshtml";
}
@using (Html.BeginForm("", "api/PREPARE_SCHEMEApi/SheIsPi"))
{
    <fieldset>
        <div id="shenghediv">
            <div>
                <div class="input_search">
                    <div class="input_search-label">
                        原始记录：
                    </div>
                    <div class="input_search-field">
                        <a id="yuanshi" href="@ViewBag.FULLPATH2"> @ViewBag.NAME2</a>
                    </div>
                </div><br />
                <div class="input_search">
                    <div class="input_search-label">
                        证书：
                    </div>
                    <div class="input_search-field">
                        <a id="zhenshu" href="@ViewBag.FULLPATH">@ViewBag.NAME</a>
                    </div>
                </div><br />
                <div class="input_search">
                    <div class="input_search-label">
                        结论：
                    </div>
                    <div class="input_search-field">
                        <label id="jielu">@ViewBag.CONCLUSION</label>
                    </div>
                </div><br />
            </div>
            @if (ViewBag.HEIFSP == "H")
            {

                <div>
                    <div class="input_search">
                        <div class="input_search-label">
                            填写审核意见：
                        </div>
                        <div class="input_search-field">
                            <textarea name="AUDITOPINION" style="width:200px;height:80px;">这里写内容</textarea>
                        </div>
                    </div><br />
                    <input type="hidden" name="ID" value="@ViewBag.PREPARE_SCHEME_ID" />
                    <input type="hidden" name="APPLIANCE_DETAIL_INFORMATIONID" value="@ViewBag.APPLIANCE_DETAIL_INFORMATIONID" />
                    <input type="hidden" name="SHPI" value="@ViewBag.HEIFSP" />
                    <input type="hidden" name="ISAGGREY" value="" id="ISAGGREY" />
                    <input type="submit" value="同意送批准" onclick="patongyi(this)" disabled="disabled" />
                    <input type="submit" value="不同意" onclick="patongyi(this)" disabled="disabled" />
                </div>
            }
            else if (ViewBag.HEIFSP == "P")
            {
                <div>
                    <div class="input_search">
                        <div class="input_search-label">
                            填写审批意见：
                        </div>
                        <div class="input_search-field">
                            <textarea name="APPROVAL" style="width:200px;height:80px;">这里写内容</textarea>
                        </div>
                    </div><br />
                    <input type="hidden" name="ID" value="@ViewBag.PREPARE_SCHEME_ID" />
                    <input type="hidden" name="APPLIANCE_DETAIL_INFORMATIONID" value="@ViewBag.APPLIANCE_DETAIL_INFORMATIONID" />
                    <input type="hidden" name="SHPI" value="@ViewBag.HEIFSP" />
                    <input type="hidden" name="ISAGGREY" value="" id="ISAGGREY2" />
                    <input type="submit" value="同意" onclick="patongyi(this)" disabled="disabled" />
                    <input type="submit" value="不同意" onclick="patongyi(this)" disabled="disabled" />
                </div>
            }
        </div>
    </fieldset>
}
