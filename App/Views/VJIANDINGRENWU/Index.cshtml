@model Langben.DAL.VJIANDINGRENWU
@{ Layout = "~/Views/Shared/Index.cshtml"; }
@using Common
@using Models
<div id="divQuery">

    <div class="input_search">
        <div class="input_search-label">
            @Html.LabelFor(model => model.ORDER_NUMBER):
        </div>
        <div class="input_search-field">
            <input type='text' id='ORDER_NUMBER' />
        </div>
    </div>
    <div class="input_search">
        <div class="input_search-label">
            @Html.LabelFor(model => model.APPLIANCE_NAME):
        </div>
        <div class="input_search-field">
            <input type='text' id='APPLIANCE_NAME' />
        </div>
    </div>
    <div class="input_search">
        <div class="input_search-label">
            @Html.LabelFor(model => model.VERSION):
        </div>
        <div class="input_search-field">
            <input type='text' id='VERSION' />
        </div>
    </div>
    <div class="input_search">
        <div class="input_search-label">
            @Html.LabelFor(model => model.FACTORY_NUM):
        </div>
        <div class="input_search-field">
            <input type='text' id='FACTORY_NUM' />
        </div>
    </div>
    <div class="input_search">
        <div class="input_search-label">
            @Html.LabelFor(model => model.CERTIFICATE_ENTERPRISE):
        </div>
        <div class="input_search-field">
            <input type='text' id='CERTIFICATE_ENTERPRISE' />
        </div>
    </div>
    <div class="input_search">
        <div class="input_search-label">
            @Html.LabelFor(model => model.ORDER_STATUS):
        </div>
        <div class="input_search-field">
            @Html.DropDownList("ORDER_STATUSDDL_String", Models.SysFieldModels.GetSysField("VJIANDINGRENWU", "ORDER_STATUS"), "请选择", new { id = "ORDER_STATUSDDL_String" })
        </div>
    </div>
    <div class="input_search">
        <div class="input_search-label">
            @Html.LabelFor(model => model.INSPECTION_ENTERPRISE):
        </div>
        <div class="input_search-field">
            <input type='text' id='INSPECTION_ENTERPRISE' />
        </div>
    </div>
    <div class="input_search">
        <div class="input_search-label">
            @Html.LabelFor(model => model.ISOVERDUE):
        </div>
        <div class="input_search-field">
            @Html.DropDownList("ISOVERDUEDDL_String", Models.SysFieldModels.GetSysField("VJIANDINGRENWU", "ISOVERDUE"), "请选择", new { id = "ISOVERDUEDDL_String" })
        </div>
    </div>
    <div class='input_search' style="padding-top:10px;">
        <a href="#" onclick="flexiQuery()" class="easyui-linkbutton" data-options="iconCls:'icon-search'">
            查 询
        </a>
    </div>
</div>
<br style="clear: both;" />

<script type="text/javascript" language="javascript">
    $(function () {

        $('#flexigridData').datagrid({
            title: '检定任务', //列表的标题
            iconCls: 'icon-site',
            width: 'auto',
            height: 'auto',
            //nowrap: false,
            striped: true,
            collapsible: true,
            url: '../VJIANDINGRENWU/GetData', //获取数据的url
            sortName: 'ID',
            sortOrder: 'desc',
            idField: 'ID',

            toolbar: [

                 {
                     text: '领取',
                     iconCls: 'icon-search',
                     handler: function () {
                         return lingqu();
                     }
                 },
                  {
                      text: '选择方案',
                      iconCls: 'icon-search',
                      handler: function () {
                          return xuanzhefanan();
                      }
                  },
                   {
                       text: '器具信息修改',
                       iconCls: 'icon-search',
                       handler: function () {
                           return getView();
                       }
                   },
                    {
                        text: '追加超期原因',
                        iconCls: 'icon-search',
                        handler: function () {
                            return getView();
                        }
                    },
            {
                text: '退回',
                iconCls: 'icon-search',
                handler: function () {
                    return getView();
                }
            },
             {
                 text: '空白原始记录',
                 iconCls: 'icon-search',
                 handler: function () {
                     return getView();
                 }
             }
            ],
            columns: [[
					{ field: 'ID', title: '@Html.DisplayNameFor(model => model.ID)', width: 64, hidden: true }
					, { field: 'ORDER_NUMBER', title: '@Html.DisplayNameFor(model => model.ORDER_NUMBER)', width: 64 }
					, { field: 'APPLIANCE_NAME', title: '@Html.DisplayNameFor(model => model.APPLIANCE_NAME)', width: 64 }
					, { field: 'VERSION', title: '@Html.DisplayNameFor(model => model.VERSION)', width: 64 }
					, { field: 'FACTORY_NUM', title: '@Html.DisplayNameFor(model => model.FACTORY_NUM)', width: 64 }
					, { field: 'CERTIFICATE_ENTERPRISE', title: '@Html.DisplayNameFor(model => model.CERTIFICATE_ENTERPRISE)', width: 64 }
					, { field: 'CUSTOMER_SPECIFIC_REQUIREMENTS', title: '@Html.DisplayNameFor(model => model.CUSTOMER_SPECIFIC_REQUIREMENTS)', width: 64 }
					, { field: 'ORDER_STATUS', title: '@Html.DisplayNameFor(model => model.ORDER_STATUS)', width: 64 }
					, { field: 'CREATEPERSON', title: '@Html.DisplayNameFor(model => model.CREATEPERSON)', width: 64 }
					, { field: 'APPLIANCE_PROGRESS', title: '@Html.DisplayNameFor(model => model.APPLIANCE_PROGRESS)', width: 64 }
					, { field: 'OVERDUE', title: '@Html.DisplayNameFor(model => model.OVERDUE)', width: 64 }
					, { field: 'STATE', title: '@Html.DisplayNameFor(model => model.STATE)', width: 64 }
					, { field: 'REPORTSTATUS', title: '@Html.DisplayNameFor(model => model.REPORTSTATUS)', width: 64 }
					, { field: 'APPROVAL', title: '@Html.DisplayNameFor(model => model.APPROVAL)', width: 64 }
					, { field: 'INSPECTION_ENTERPRISE', title: '@Html.DisplayNameFor(model => model.INSPECTION_ENTERPRISE)', width: 64 }
					, { field: 'ISOVERDUE', title: '@Html.DisplayNameFor(model => model.ISOVERDUE)', width: 64 }
            ]],
            pagination: true,
            rownumbers: true

        });

        var parent = window.dialogArguments; //获取父页面
        if (parent == "undefined" || parent == null) {
            //    不是在iframe中打开的
        } else {
            //隐藏所有的按钮和分隔符
            $(".l-btn.l-btn-plain").hide();
            $(".datagrid-btn-separator").hide();
            //添加选择按钮
            $('#flexigridData').datagrid("addToolbarItem", [{ "text": "选择", "iconCls": "icon-ok", handler: function () { flexiSelect(); } }]);
        }
    });

    //“查询”按钮，弹出查询框
    function flexiQuery() {

        //将查询条件按照分隔符拼接成字符串
        var search = "";
        $('#divQuery').find(":text,:selected,select,textarea,:hidden,:checked,:password").each(function () {
            if (this.id)
                search = search + this.id + "&" + this.value + "^";
            else
                search = search + this.name + "&" + this.value + "^";
        });
        //执行查询
        $('#flexigridData').datagrid('load', { search: search });
    };

    //“选择”按钮，在其他（与此页面有关联）的页面中，此页面以弹出框的形式出现，选择页面中的数据
    function flexiSelect() {

        var rows = $('#flexigridData').datagrid('getSelections');
        if (rows.length == 0) {
            $.messager.alert('操作提示', '请选择数据!', 'warning');
            return false;
        }

        var arr = [];
        for (var i = 0; i < rows.length; i++) {
            arr.push(rows[i].ID);
        }
        arr.push("^");
        for (var i = 0; i < rows.length; i++) {
            arr.push(rows[i].ORDER_NUMBER);
        }
        //主键列和显示列之间用 ^ 分割   每一项用 , 分割
        if (arr.length > 0) {//一条数据和多于一条
            returnParent(arr.join("&")); //每一项用 & 分割
        }
    }
    //导航到查看详细的按钮
    function getView() {

        var arr = $('#flexigridData').datagrid('getSelections');

        if (arr.length == 1) {
            window.location.href = "../VJIANDINGRENWU/Details/" + arr[0].ID;

        } else {
            $.messager.alert('操作提示', '请选择一条数据!', 'warning');
        }
        return false;
    }

    //判断是否为领取的器具
    function panduanlingqu() {
        var arr = $('#flexigridData').datagrid('getSelections');
        if (arr.length>=1) {
            if (arr[i].ORDER_STATUS != null && arr[i].APPLIANCE_PROGRESS != null) {
                $.messager.alert('操作提示', '请选择已领取的数据!', 'warning');
                return false;
            }
            else {
                return true;
            }
        }
        else {
            $.messager.alert('操作提示', '请选择一条数据!', 'warning');
            return false;
        }
    }

    //判断是否选择一条数据
    function panduanyitiao() {
        var arr = $('#flexigridData').datagrid('getSelections');
        if (arr.length == 1) {
            return arr;
        }
        else {
            $.messager.alert('操作提示', '请选择一条数据!', 'warning');
            return arr;
        }

    }
    //领取
    function lingqu() {
        var arr = $('#flexigridData').datagrid('getSelections');
        if (arr.length >= 1) {
            var is = "";
            $.messager.confirm('操作提示', "确认领取这 " + arr.length + " 项吗？", function (r) {
                if (r) {
                    for (var i = 0; i < arr.length; i++) {
                        if ( arr[i].ORDER_STATUS !=null && arr[i].APPLIANCE_PROGRESS != null) {
                            $.messager.alert('操作提示', '不能重复领取!', 'warning');
                            is = "";
                            return false;
                        }
                        else {
                            is += arr[i].ID + ",";
                        }
                    }
                    is = is.substring(0, is.length - 1) + "^三相";
                    //GetData("/api/VAPPLIANCE_DETAIL_INFORMATIONApi/PutCollection", id);
                    $.ajax({
                        url: "/api/VAPPLIANCE_DETAIL_INFORMATIONApi/Put/"+is,
                        type: "Put",
                        // async: false,
                        success: function (res) {
                            if (res.Code == 1) {
                                $.messager.alert('操作提示', res.Message, 'info');
                                $("#flexigridData").datagrid("reload");
                                $("#flexigridData").datagrid("clearSelections");
                            }
                            else {
                                $.messager.alert('操作提示', res.Message, 'info');
                            }
                        }
                    })
                }
            })
        }
        else {
            $.messager.alert('操作提示', '请选择一条数据!', 'warning');
        }
    }
    //选择方案
    function xuanzhefanan() {
        if (panduanlingqu()) {
            window.location.href = "../VBAOGAODAYIN/Xuanzhefangan/" + arr[0].ID;
        }
        else {
            $.messager.alert('操作提示', '操作有误，请仔细检查!', 'warning');
        }
    }
    //獲取數據集
    ///<param name="posturl">請求地址</param>
    ///<param name="postdata">發送的數據（json格式）</param>
    ///<returns>json對象陣列</returns>
    function GetData(posturl, postdata) {
        var rtnValue;
        $.ajax({
            type: "Delete",
            traditional: true,
            url: posturl,
            async: false,
            data: postdata,
            success: function (data) {
                rtnValue = $.parseJSON(data);
            },
            error: function (xhr) {
                displayError(xhr);
            }
        });
        return rtnValue;
    }
</script>
