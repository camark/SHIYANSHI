
@{
    Layout = "~/Views/Shared/AppCreate.cshtml";
}

<fieldset>

    <div>
        <form id="form1" method="post" enctype="multipart/form-data" action="/VJIANDINGRENWU/BaoGaoShangChuan">



            <div class="input_search">
                <div class="input_search-label">
