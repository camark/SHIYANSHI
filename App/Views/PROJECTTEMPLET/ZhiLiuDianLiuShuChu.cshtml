            var htmlString = [];
            var rowLength = $("#tbody_" + idx + " tr").length;
            var lianChengID = tableIdx + "_" + idx;//（量程ID）第几个通道_第几个量程
            for (var rowidx = 0; rowidx < rowspanIdx; rowidx++) {
                rowLength++;
                htmlString.push("<tr rowindex='" + rowLength + "'>");

                var rowspan;
                var name;
                var id;
                var txtVal;
                var ddlhtml;
                var ddlVal;
                var HangHaoID = lianChengID + "_" + rowidx;//（行号ID)量程ID_第几行
                if (rowidx == 0) {                                                          

                    //量程
                    htmlString.push(SetTDHtml(RuleAttribute, rowspanIdx, "RANGE", lianChengID, null,txtNumber));
                    //选用电阻阻值                   
                    htmlString.push(SetTDHtml(RuleAttribute, rowspanIdx, "RESISTANCE", lianChengID, null,""));
                }                

                //输出示值              
                 
                var changerHTML = "onblur=''";                
                //输出示值                  
                htmlString.push(SetTDHtml(RuleAttribute, 1, "OUTPUT_VALUE", HangHaoID, rowidx,""));
                //读数值                
                 htmlString.push(SetTDHtml(RuleAttribute, 1, "READ_VALUE", HangHaoID, rowidx,""));
                 //输出实际值                 
                 htmlString.push(SetTDHtml(RuleAttribute, 1, "ACTUAL_OUTPUT_VALUE", HangHaoID, rowidx,""));
                //相对误差                 
                 htmlString.push(SetTDHtml(RuleAttribute, 1, "RELATIVE_ERROR", HangHaoID, rowidx,""));
                //校准结果的不确定度                 
                 htmlString.push(SetTDHtml(RuleAttribute, 1, "UNCERTAINTY_DEGREE", HangHaoID, rowidx,""));
