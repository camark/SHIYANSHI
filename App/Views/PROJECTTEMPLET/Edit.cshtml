                        </tr>
                    </table>
                    }} 
                </div>
                @Html.HiddenFor(model => model.SCHEME_RULEID)
            </div>     
            <div class="editor-label">
                @Html.LabelFor(model => model.HTMLVALUE)：
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.HTMLVALUE)
                @Html.ValidationMessageFor(model => model.HTMLVALUE)
            </div>@Html.HiddenFor(model => model.CREATETIME )      
