@using (Html.BeginForm("", "api/PROJECTTEMPLETApi/Put"))
{
    <fieldset>
        <legend>
            <input class="a2 f2" type="submit" value="修改" />
            <input class="a2 f2" type="button" onclick="BackList('PROJECTTEMPLET')" value="返回列表" />
        </legend>
        <div class="bigdiv">
            @Html.HiddenFor(model => model.ID )       
            <div class="editor-label">
                <a class="anUnderLine" onclick="showModalOnly('SCHEME_RULEID','../../SCHEME_RULE');">
                    @Html.LabelFor(model => model.SCHEME_RULEID) 
                </a>：
            </div>
            <div class="editor-field">
                <div id="checkSCHEME_RULEID">
                        @if(Model!=null)
                        {
                        if (null != Model.SCHEME_RULEID)                      
                        { 
                    <table id="@Model.SCHEME_RULEID"
                        class="deleteStyle">
                        <tr>
                            <td>
                                <img alt="删除"  title="点击删除" onclick="deleteTable('@Model.SCHEME_RULEID ','SCHEME_RULEID');" src="../../../Images/deleteimge.png" />
