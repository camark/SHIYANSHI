            if (DianZu == "" || DuShuZhi == "") {//【选用电阻阻值】没有数值时，输出实际值=读数值
                return DuShuZhi;
            }
            else if (DianZu.trim() == "0") {
                return "";
            }
            else//【选用电阻阻值】有数值时，输出实际值= 读数值 / 选用电阻阻值
            {
                var value = parseFloat(DuShuZhi.trim()) / parseFloat(DianZu.trim());
                return value;
