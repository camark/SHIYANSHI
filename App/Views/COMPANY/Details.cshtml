@model Langben.DAL.COMPANY

@{
    Layout = "~/Views/Shared/Details.cshtml";
}
@using Common
 @section CurentPlace {
    详细  
}
 
    <fieldset>
        <legend>
            <input class="a2 f2" type="button" onclick="window.location.href = 'javascript:history.go(-1)';" value="返回" />
        </legend>
        <div class="bigdiv">
                  
                <div class="display-label">
                      @Html.LabelFor(model => model.COMPANYNAME) :
                </div>
                <div class="display-field" id='COMPANYNAME'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.COMPANYADDRES) :
                </div>
                <div class="display-field" id='COMPANYADDRES'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.POSTCODE) :
                </div>
                <div class="display-field" id='POSTCODE'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.CONTACTS) :
                </div>
                <div class="display-field" id='CONTACTS'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.CONTACTSNUMBER) :
                </div>
                <div class="display-field" id='CONTACTSNUMBER'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.FAX) :
                </div>
                <div class="display-field" id='FAX'>
                </div>        
                <div class="display-label">
                      @Html.LabelFor(model => model.PARENTID) :
                </div>
                <div class="display-field">
                    @if (Model.COMPANY2 != null)
                       {
                    @Model.COMPANY2.COMPANYNAME
                    } 
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.CREATETIME) :
                </div>
                <div class="display-field" id='CREATETIME'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.CREATEPERSON) :
                </div>
                <div class="display-field" id='CREATEPERSON'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.UPDATETIME) :
                </div>
                <div class="display-field" id='UPDATETIME'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.UPDATEPERSON) :
                </div>
                <div class="display-field" id='UPDATEPERSON'>
                </div>
        </div>
    </fieldset>

<script type="text/javascript">

    $(function () {
        // 获取内容并显示
        var id = '@ViewBag.Id';
        $.ajax({
            url: "/api/COMPANYApi/" + id,
            type: "POST",
            // async: false,
            success: function (res) {
		$("#COMPANYNAME").html(res.COMPANYNAME);$("#COMPANYADDRES").html(res.COMPANYADDRES);$("#POSTCODE").html(res.POSTCODE);$("#CONTACTS").html(res.CONTACTS);$("#CONTACTSNUMBER").html(res.CONTACTSNUMBER);$("#FAX").html(res.FAX);$("#CREATETIME").html(res.CREATETIME);$("#CREATEPERSON").html(res.CREATEPERSON);$("#UPDATETIME").html(res.UPDATETIME);$("#UPDATEPERSON").html(res.UPDATEPERSON);
            }
        })
    });
</script>

