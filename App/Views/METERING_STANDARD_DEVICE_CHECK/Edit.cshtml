@model Langben.DAL.METERING_STANDARD_DEVICE_CHECK

@{
    Layout = "~/Views/Shared/Edit.cshtml";
}
@using Common
@using Models
 @section CurentPlace {
    修改  
}

@using (Html.BeginForm("", "api/METERING_STANDARD_DEVICE_CHECKApi/Put"))
{
    <fieldset>
        <legend>
            <input class="a2 f2" type="submit" value="修改" />
            <input class="a2 f2" type="button" onclick="BackList('METERING_STANDARD_DEVICE_CHECK')" value="返回列表" />
        </legend>
        <div class="bigdiv">
            @Html.HiddenFor(model => model.ID )      
            <div class="editor-label">
                @Html.LabelFor(model => model.CERTIFICATE_NUM)：
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CERTIFICATE_NUM)
                @Html.ValidationMessageFor(model => model.CERTIFICATE_NUM)
            </div>     
            <div class="editor-label">
                @Html.LabelFor(model => model.CHECK_DATE)：
            </div>
            <div class="editor-field">
                @Html.TextBox("CHECK_DATE", ((Model != null && Model.CHECK_DATE != null) ? Model.CHECK_DATE.ToString().AsDateTime().ToString("yyyy-MM-dd") : ""), new { style = "width: 244px;", @class="easyui-datebox" })
                @Html.ValidationMessageFor(model => model.CHECK_DATE)
            </div>     
            <div class="editor-label">
                @Html.LabelFor(model => model.VALID_TO)：
            </div>
            <div class="editor-field">
                @Html.TextBox("VALID_TO", ((Model != null && Model.VALID_TO != null) ? Model.VALID_TO.ToString().AsDateTime().ToString("yyyy-MM-dd") : ""), new { style = "width: 244px;", @class="easyui-datebox" })
                @Html.ValidationMessageFor(model => model.VALID_TO)
            </div>      
            <div class="editor-label">
                <a class="anUnderLine" onclick="showModalOnly('METERING_STANDARD_DEVICEID','../../METERING_STANDARD_DEVICE');">
                    @Html.LabelFor(model => model.METERING_STANDARD_DEVICEID) 
                </a>：
            </div>
            <div class="editor-field">
                <div id="checkMETERING_STANDARD_DEVICEID">
                        @if(Model!=null)
                        {
                        if (null != Model.METERING_STANDARD_DEVICEID)                      
                        { 
                    <table id="@Model.METERING_STANDARD_DEVICEID"
                        class="deleteStyle">
                        <tr>
                            <td>
                                <img alt="删除"  title="点击删除" onclick="deleteTable('@Model.METERING_STANDARD_DEVICEID ','METERING_STANDARD_DEVICEID');" src="../../../Images/deleteimge.png" />
                            </td>
                            <td>
                                @Model.METERING_STANDARD_DEVICE.NAME
                            </td>
                        </tr>
                    </table>
                    }} 
                </div>
                @Html.HiddenFor(model => model.METERING_STANDARD_DEVICEID)
            </div>@Html.HiddenFor(model => model.CREATETIME )      
            <div class="editor-label">
                @Html.LabelFor(model => model.CREATEPERSON)：
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CREATEPERSON)
                @Html.ValidationMessageFor(model => model.CREATEPERSON)
            </div>     
            <div class="editor-label">
                @Html.LabelFor(model => model.UPDATEPERSON)：
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UPDATEPERSON)
                @Html.ValidationMessageFor(model => model.UPDATEPERSON)
            </div>
        </div>
    </fieldset>
}



    <script type="text/javascript">

        $(function () {
            

            // 获取待编辑内容并显示
            var id = '@ViewBag.Id';
            $.ajax({
                url: "/api/METERING_STANDARD_DEVICE_CHECKApi/" + id,
                type: "POST",
                // async: false,
                success: function (res) {
                    $("#ID").val(res.ID);$("#CERTIFICATE_NUM").val(res.CERTIFICATE_NUM);$("#CHECK_DATE").val(res.CHECK_DATE);$("#VALID_TO").val(res.VALID_TO);$("#CREATETIME").val(res.CREATETIME);$("#CREATEPERSON").val(res.CREATEPERSON);$("#UPDATEPERSON").val(res.UPDATEPERSON);
                }
            })
        });
        

    </script>



