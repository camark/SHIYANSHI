@model Langben.DAL.UNCERTAINTY

@{
    Layout = "~/Views/Shared/Details.cshtml";
}
@using Common
 @section CurentPlace {
    详细  
}
 
    <fieldset>
        <legend>
            <input class="a2 f2" type="button" onclick="window.location.href = 'javascript:history.go(-1)';" value="返回" />
        </legend>
        <div class="bigdiv">
                  
                <div class="display-label">
                      @Html.LabelFor(model => model.RANGE) :
                </div>
                <div class="display-field" id='RANGE'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.RANGE_UNIT) :
                </div>
                <div class="display-field" id='RANGE_UNIT'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.KPI_1) :
                </div>
                <div class="display-field" id='KPI_1'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.KPI_1_UNIT) :
                </div>
                <div class="display-field" id='KPI_1_UNIT'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.KPI_2) :
                </div>
                <div class="display-field" id='KPI_2'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.KPI_2_UNIT) :
                </div>
                <div class="display-field" id='KPI_2_UNIT'>
                </div>        
                <div class="display-label">
                      @Html.LabelFor(model => model.RULEID) :
                </div>
                <div class="display-field">
                    @if (Model.RULE != null)
                       {
                    @Model.RULE.NAME
                    } 
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.CREATETIME) :
                </div>
                <div class="display-field" id='CREATETIME'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.CREATEPERSON) :
                </div>
                <div class="display-field" id='CREATEPERSON'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.UPDATETIME) :
                </div>
                <div class="display-field" id='UPDATETIME'>
                </div>      
                <div class="display-label">
                      @Html.LabelFor(model => model.UPDATEPERSON) :
                </div>
                <div class="display-field" id='UPDATEPERSON'>
                </div>
        </div>
    </fieldset>

<script type="text/javascript">

    $(function () {
        // 获取内容并显示
        var id = '@ViewBag.Id';
        $.ajax({
            url: "/api/UNCERTAINTYApi/" + id,
            type: "POST",
            // async: false,
            success: function (res) {
		$("#RANGE").html(res.RANGE);$("#RANGE_UNIT").html(res.RANGE_UNIT);$("#KPI_1").html(res.KPI_1);$("#KPI_1_UNIT").html(res.KPI_1_UNIT);$("#KPI_2").html(res.KPI_2);$("#KPI_2_UNIT").html(res.KPI_2_UNIT);$("#CREATETIME").html(res.CREATETIME);$("#CREATEPERSON").html(res.CREATEPERSON);$("#UPDATETIME").html(res.UPDATETIME);$("#UPDATEPERSON").html(res.UPDATEPERSON);
            }
        })
    });
</script>

