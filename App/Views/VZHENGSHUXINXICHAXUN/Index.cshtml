@model Langben.DAL.VZHENGSHUXINXICHAXUN
@{ Layout = "~/Views/Shared/Index.cshtml"; }
@using Common
@using Models
<div id="divQuery">
    
    <div class='input_search' style="padding-top:10px;">
        <a href="#" onclick="flexiQuery()" class="easyui-linkbutton" data-options="iconCls:'icon-search'">
            查 询
        </a>
    </div>
</div>
 <br style="clear: both;" />

<script type="text/javascript" language="javascript">
    $(function () {

        $('#flexigridData').datagrid({
            title: '证书信息查询', //列表的标题
            iconCls: 'icon-site',
            width: 'auto',
            height: 'auto',
            //nowrap: false,
            striped: true,
            collapsible: true,
            url: '../VZHENGSHUXINXICHAXUN/GetData', //获取数据的url
            sortName: '^m_Sort^',
            sortOrder: 'desc',
            idField: 'ID',

            toolbar: [

                 {
                     text: '详细',
                     iconCls: 'icon-search',
                     handler: function () {
                         return getView();
                     }
                 } ],
            columns: [[

                
					{ field: 'ID', title: '@Html.DisplayNameFor(model => model.ID)', width: 33 }
					,{ field: 'SONGJIANDANWEI', title:  '@Html.DisplayNameFor(model => model.SONGJIANDANWEI)', width: 33 }
					,{ field: 'ZHENGSHUDANWEI', title:  '@Html.DisplayNameFor(model => model.ZHENGSHUDANWEI)', width: 33 }
					,{ field: 'SHOULIDANWEI', title:  '@Html.DisplayNameFor(model => model.SHOULIDANWEI)', width: 33 }
					,{ field: 'CHUCHANGRIQI', title:  '@Html.DisplayNameFor(model => model.CHUCHANGRIQI)', width: 33 }
					,{ field: 'QIJUMINGCHENG', title:  '@Html.DisplayNameFor(model => model.QIJUMINGCHENG)', width: 33 }
					,{ field: 'SHENGCHANCHANGJIA', title:  '@Html.DisplayNameFor(model => model.SHENGCHANCHANGJIA)', width: 33 }
					,{ field: 'QIJUXINGHAO', title:  '@Html.DisplayNameFor(model => model.QIJUXINGHAO)', width: 33 }
					,{ field: 'CHUCHANGBIANHAO', title:  '@Html.DisplayNameFor(model => model.CHUCHANGBIANHAO)', width: 33 }
					,{ field: 'ZHUNQUEDUDENGJI', title:  '@Html.DisplayNameFor(model => model.ZHUNQUEDUDENGJI)', width: 33 }
					,{ field: 'JIANDINGRIQI', title:  '@Html.DisplayNameFor(model => model.JIANDINGRIQI)', width: 33 }
					,{ field: 'WENDU', title:  '@Html.DisplayNameFor(model => model.WENDU)', width: 33 }
					,{ field: 'XIANGDUISHIDU', title:  '@Html.DisplayNameFor(model => model.XIANGDUISHIDU)', width: 33 }
					,{ field: 'MOCHONGCHANGSHU', title:  '@Html.DisplayNameFor(model => model.MOCHONGCHANGSHU)', width: 33 }
					,{ field: 'QIJUGUIGE', title:  '@Html.DisplayNameFor(model => model.QIJUGUIGE)', width: 33 }
					,{ field: 'JIANDINGXIAOZHUNYUAN', title:  '@Html.DisplayNameFor(model => model.JIANDINGXIAOZHUNYUAN)', width: 33 }
					,{ field: 'HEYANYUAN', title:  '@Html.DisplayNameFor(model => model.HEYANYUAN)', width: 33 }
					,{ field: 'YOUXIAOQI', title:  '@Html.DisplayNameFor(model => model.YOUXIAOQI)', width: 33 }
					,{ field: 'YOUXIAOQIZHI', title:  '@Html.DisplayNameFor(model => model.YOUXIAOQIZHI)', width: 33 }
					,{ field: 'ZHENGSHUBAOGAOBIANHAO', title:  '@Html.DisplayNameFor(model => model.ZHENGSHUBAOGAOBIANHAO)', width: 33 }
					,{ field: 'ZHENGSHULEIBIE', title:  '@Html.DisplayNameFor(model => model.ZHENGSHULEIBIE)', width: 33 }
					,{ field: 'BAOGAOLEIBIE', title:  '@Html.DisplayNameFor(model => model.BAOGAOLEIBIE)', width: 33 }
					,{ field: 'SHOUQUANZIZHI', title:  '@Html.DisplayNameFor(model => model.SHOUQUANZIZHI)', width: 33 }
					,{ field: 'FAFANGZHUANGTAI', title:  '@Html.DisplayNameFor(model => model.FAFANGZHUANGTAI)', width: 33 }
					,{ field: 'SUOSHUDANWEI', title:  '@Html.DisplayNameFor(model => model.SUOSHUDANWEI)', width: 33 }
					,{ field: 'WEITUODANWEI', title:  '@Html.DisplayNameFor(model => model.WEITUODANWEI)', width: 33 }
					,{ field: 'BEIZHU', title:  '@Html.DisplayNameFor(model => model.BEIZHU)', width: 33 }
                ]],
            pagination: true,
            rownumbers: true

        });

        var parent = window.dialogArguments; //获取父页面
        if (parent == "undefined" || parent == null) {
            //    不是在iframe中打开的
        } else {
            //隐藏所有的按钮和分隔符
            $(".l-btn.l-btn-plain").hide();
            $(".datagrid-btn-separator").hide();
            //添加选择按钮
            $('#flexigridData').datagrid("addToolbarItem", [{ "text": "选择", "iconCls": "icon-ok", handler: function () { flexiSelect(); } }]);
        }
    });

    //“查询”按钮，弹出查询框
    function flexiQuery() {

        //将查询条件按照分隔符拼接成字符串
        var search = "";
        $('#divQuery').find(":text,:selected,select,textarea,:hidden,:checked,:password").each(function () {
            if (this.id)
                search = search + this.id + "&" + this.value + "^";
            else
                search = search + this.name + "&" + this.value + "^";
        });
        //执行查询
        $('#flexigridData').datagrid('load', { search: search });
    };
 
    //“选择”按钮，在其他（与此页面有关联）的页面中，此页面以弹出框的形式出现，选择页面中的数据
    function flexiSelect() {

        var rows = $('#flexigridData').datagrid('getSelections');
        if (rows.length == 0) {
            $.messager.alert('操作提示', '请选择数据!', 'warning');
            return false;
        }

        var arr = [];
        for (var i = 0; i < rows.length; i++) {
            arr.push(rows[i].ID);
        }
        arr.push("^");
        for (var i = 0; i < rows.length; i++) {
            arr.push(rows[i].SONGJIANDANWEI);
        }
        //主键列和显示列之间用 ^ 分割   每一项用 , 分割
        if (arr.length > 0) {//一条数据和多于一条
            returnParent(arr.join("&")); //每一项用 & 分割
        }
    }
    //导航到查看详细的按钮
    function getView() {

        var arr = $('#flexigridData').datagrid('getSelections');

        if (arr.length == 1) {
            window.location.href = "../VZHENGSHUXINXICHAXUN/Details/" + arr[0].ID;

        } else {
            $.messager.alert('操作提示', '请选择一条数据!', 'warning');
        }
        return false;
    }
 

</script>

